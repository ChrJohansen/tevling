@page "/challenges"

<PageTitle>Challenges</PageTitle>

@using Spur.Model
@using Spur.Services

<h1>Challenges</h1>

<p>List all challenges</p>

@if (challenges == null)
{
    <p><button class="btn btn-primary" @onclick="FetchChallenges">Fetch challenges</button></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Start</th>
                <th>End</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var challenge in challenges)
            {
                <tr>
                    <td>@challenge.Id</td>
                    <td>@challenge.Start.DateTime.ToShortDateString()</td>
                    <td>@challenge.End.DateTime.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}

@inject IChallengeService ChallengeService
@code {
    private IEnumerable<Challenge>? challenges;

    public async Task FetchChallenges()
    {
        challenges = await ChallengeService.GetChallengesAsync();
    }
}
