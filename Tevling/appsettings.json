{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "RequestPath like '/health%'"
        }
      }
    ],
    "Using": [
      "Serilog.Expressions",
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": {
            "type": "Serilog.Templates.ExpressionTemplate, Serilog.Expressions",
            "template": "[{@t:HH:mm:ss} {@l:u3}{#if @tr is not null} ({substring(@tr,0,4)}:{substring(@sp,0,4)}){#end} ({SourceContext})] {@m}\n{@x}",
            "theme": "Serilog.Templates.Themes.TemplateTheme::Literate, Serilog.Expressions"
          }
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./storage/logs/log-.txt",
          "rollingInterval": "Day",
          "formatter": {
            "type": "Serilog.Templates.ExpressionTemplate, Serilog.Expressions",
            "template": "{@t:yyyy-MM-dd HH:mm:ss.fff zzz} | {@l:u4} | {#if @tr is not null}{substring(@tr,0,4)}:{substring(@sp,0,4)} | {#end}{SourceContext} | {@m}\n{@x}"
          }
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "StravaConfig": {
    "RedirectUri": "http://localhost:8080/api/authorize",
    "BaseApiUri": "http://localhost:8080/dev/strava/",
    "AuthorizeUri": "http://localhost:8080/dev/strava/authorize",
    "DeauthorizeUri": "http://localhost:8080/dev/strava/deauthorize",
    "TokenUri": "http://localhost:8080/dev/strava/token"
  },
  "FeatureManagement": {
    "DevTools": true,
    "DevToolsMenuItem": true
  }
}
