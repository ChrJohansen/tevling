@page "/challenges"

<PageTitle>Tevling - Challenges</PageTitle>

<h1>Challenges</h1>

<div class="d-flex flex-column rg-3 mb-3">
    <div>
        <a class="btn btn-primary" href="challenges/create"><span class="oi oi-plus" /> Add challenge</a>
    </div>

    <div>
        <label>Search: <InputText @bind-Value="@FilterText" @oninput="SetFilterTextDebounced" /></label>
    </div>

    <div class="d-flex cg-3">
        <label>Show all challenges <input @bind="ShowAllChallenges" class="form-check-input" type="checkbox" /></label>
        <label>Show outdated challenges <input @bind="ShowOutdatedChallenges" class="form-check-input" type="checkbox" /></label>
    </div>
</div>

<div class="d-flex flex-wrap cg-3 rg-3 mb-3">
    @foreach (var challenge in ChallengeList)
    {
        <ChallengeCard AthleteId="@AthleteId" Challenge="@challenge" />
    }
</div>

<InfiniteScrollingMarker LoadMore="LoadMore" HasMore="HasMore">
    <LoadingTemplate>Loading...</LoadingTemplate>
</InfiniteScrollingMarker>
